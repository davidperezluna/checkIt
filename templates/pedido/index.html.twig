{% extends 'base.html.twig' %}

{% block title %}Pedido index{% endblock %}

{% block body %}
    <h1>Pedido index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha Inicial</th>
                <th>Fecha Entrega</th>
                <th>Cliente</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.fechaInicial ? pedido.fechaInicial|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.fechaEntrega ? pedido.fechaEntrega|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.cliente.nombre }}</td>
                <td>{{ pedido.estadoPedido.nombre }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('pedido_show', {'id': pedido.id}) }}">Ver</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
