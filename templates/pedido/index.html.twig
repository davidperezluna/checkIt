{% extends 'base.html.twig' %}

{% block title %}Pedido index{% endblock %}

{% block body %}
    <h1>Pedido index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FechaInicial</th>
                <th>FechaEntrega</th>
                <th>AnotacionesCliente</th>
                <th>AnotacionesPedido</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.fechaInicial ? pedido.fechaInicial|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.fechaEntrega ? pedido.fechaEntrega|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.anotacionesCliente }}</td>
                <td>{{ pedido.anotacionesPedido }}</td>
                <td>
                    <a href="{{ path('pedido_show', {'id': pedido.id}) }}">show</a>
                    <a href="{{ path('pedido_edit', {'id': pedido.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pedido_new') }}">Create new</a>
{% endblock %}
