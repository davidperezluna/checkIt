{% extends 'base.html.twig' %}

{% block title %}{{ producto.nombre }}{% endblock %}

{% block body %}
<center>
    <h1>{{ producto.ref }} - {{producto.nombre}}</h1>
</center>

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <img src="{{ asset('uploads/' ~ producto.imagen) }}" width="100%" alt="">
            </div>
        </div>
    </div>
    <div class="col-8">
        <div>
            <a href="{{ path('producto') }}" class="btn btn-outline-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
        </div>
        <p>
            Referencia: {{ producto.ref }}<br>
            Nombre: {{ producto.Nombre }}<br>
            Precio: {{ producto.precio }}<br>
            Stock: {{ producto.cantidad }}<br>
        </p>
        <p>
            {{ producto.descripcion|raw|nl2br }}
        </p>
        <form action="{{ path('pedido_new') }}" method="POST">
            <input type="number" placeholder="cantidad" name="cantidad">
            <input type="hidden" name="productoId" value="{{ producto.id }}">
            <button type="submit" class="btn btn-outline-success"><i class="fa fa-shopping-basket" aria-hidden="true"></i></button>
        </form>        
    </div>
</div>


{% endblock %}
